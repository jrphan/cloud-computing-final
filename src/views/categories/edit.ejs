<%- include('../partials/header') %>

    <div class="row justify-content-center wrapper-container">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" style="background: linear-gradient(45deg, var(--primary-color), var(--primary-dark)); color: white; border-radius: var(--border-radius) var(--border-radius) 0 0 !important; padding: 1.5rem;">
                    <h4 class="card-title mb-0 d-flex align-items-center">
                        <i class="fas fa-edit me-2" style="color: #fff;"></i>Chỉnh sửa chuyên mục
                    </h4>
                </div>
                <div class="card-body">
                    <form action="/categories/<%= category.slug %>?_method=PUT" method="POST" class="needs-validation"
                        novalidate>
                        <div class="mb-4">
                            <label for="name" class="form-label">Tên chuyên mục</label>
                          
                                <input type="text" class="form-control" id="name" name="name"
                                    value="<%= category.name %>" required pattern="[A-Za-zÀ-ỹ\s]+" minlength="2"
                                    maxlength="50">
                                <div class="invalid-feedback">
                                    Vui lòng nhập tên chuyên mục (2-50 ký tự, chỉ chữ cái và dấu cách)
                                </div>
                            <small class="form-text text-muted">
                                Tên chuyên mục sẽ được tự động chuyển thành slug URL
                            </small>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Mô tả</label>
                          
                                <textarea class="form-control" id="description" name="description" rows="4"
                                    maxlength="200"><%= category.description %></textarea>
                            <small class="form-text text-muted">
                                Mô tả ngắn gọn về chuyên mục (tối đa 200 ký tự)
                            </small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/categories/manage" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
 .wrapper-container {
            min-height: calc(100vh - 440px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            background: white;
            transition: var(--transition);
        }

        .card-header {
            background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
            color: white;
            border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
            padding: 1.5rem;
        }

        .card-title {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            margin: 0;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .input-group {
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .input-group-text {
            background: var(--light-bg);
            border: none;
            color: var(--primary-color);
        }

        .form-control {
            border: 1px solid rgba(0, 0, 0, 0.1);
            padding: 0.8rem 1rem;
            font-size: 1rem;
            transition: var(--transition);
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(26, 35, 126, 0.15);
            border-color: var(--primary-color);
        }

        textarea.form-control {
            resize: vertical;
            min-height: 120px;
        }

        .form-text {
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .btn {
            padding: 0.8rem 1.8rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
    </style>

    <script>
        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>

    <%- include('../partials/footer') %>