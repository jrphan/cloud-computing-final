<%- include('../partials/header') %>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa chuyên mục
                    </h4>
                </div>
                <div class="card-body">
                    <form action="/categories/<%= category.slug %>?_method=PUT" method="POST" class="needs-validation"
                        novalidate>
                        <div class="mb-4">
                            <label for="name" class="form-label">Tên chuyên mục</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-folder"></i>
                                </span>
                                <input type="text" class="form-control" id="name" name="name"
                                    value="<%= category.name %>" required pattern="[A-Za-zÀ-ỹ\s]+" minlength="2"
                                    maxlength="50">
                                <div class="invalid-feedback">
                                    Vui lòng nhập tên chuyên mục (2-50 ký tự, chỉ chữ cái và dấu cách)
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                Tên chuyên mục sẽ được tự động chuyển thành slug URL
                            </small>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Mô tả</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-align-left"></i>
                                </span>
                                <textarea class="form-control" id="description" name="description" rows="4"
                                    maxlength="200"><%= category.description %></textarea>
                            </div>
                            <small class="form-text text-muted">
                                Mô tả ngắn gọn về chuyên mục (tối đa 200 ký tự)
                            </small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/categories/manage" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            background: white;
            transition: var(--transition);
        }

        .card-header {
            background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
            color: white;
            border-radius: var(--border-radius) var(--border-radius) 0 0 !important;
            padding: 1.5rem;
        }

        .card-title {
            font-family: 'Montserrat', sans-serif;
            font-weight: 600;
            margin: 0;
        }

        .form-label {
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            background: var(--light-bg);
            border: 1px solid var(--border-color);
            color: var(--text-light);
        }

        .form-control {
            border: 1px solid var(--border-color);
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(var(--primary-rgb), 0.25);
        }

        .form-control.is-invalid {
            border-color: var(--danger-color);
            background-image: none;
        }

        .form-control.is-invalid:focus {
            box-shadow: 0 0 0 0.2rem rgba(var(--danger-rgb), 0.25);
        }

        .form-text {
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: var(--transition);
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--primary-dark));
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(var(--primary-rgb), 0.3);
        }

        .btn-outline-secondary {
            border: 2px solid var(--border-color);
        }

        .btn-outline-secondary:hover {
            background: var(--light-bg);
            border-color: var(--text-light);
            transform: translateY(-2px);
        }

        @media (prefers-color-scheme: dark) {
            .card {
                background: #2d2d2d;
            }

            .form-label {
                color: var(--text-color);
            }

            .input-group-text {
                background: #333;
                border-color: #444;
                color: var(--text-light);
            }

            .form-control {
                background: #333;
                border-color: #444;
                color: var(--text-color);
            }

            .form-control:focus {
                background: #333;
                color: var(--text-color);
            }

            .form-text {
                color: var(--text-light);
            }

            .btn-outline-secondary {
                border-color: #444;
                color: var(--text-color);
            }

            .btn-outline-secondary:hover {
                background: #333;
                border-color: var(--text-light);
                color: var(--text-color);
            }
        }
    </style>

    <script>
        // Form validation
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>

    <%- include('../partials/footer') %>