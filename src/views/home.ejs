<%- include('partials/header') %>

    <div class="container py-4">
        <div class="row g-4">
            <!-- Featured Post -->
            <% if (posts && posts.length> 0) { %>
                <div class="col-12">
                    <div class="card featured-post border-0">
                        <div class="row g-0">
                            <% if (posts[0].thumbnail) { %>
                                <div class="col-md-5">
                                    <div class="position-relative h-100">
                                        <img src="<%= posts[0].thumbnail %>" class="featured-img h-100 w-100"
                                            style="object-fit: cover;" alt="<%= posts[0].title %>">
                                        <div class="position-absolute top-0 start-0 p-3">
                                            <span class="badge bg-primary">
                                                <%= posts[0].category.name %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <div class="col-md-<%= posts[0].thumbnail ? '7' : '12' %>">
                                        <div class="card-body p-4">
                                            <div class="d-flex align-items-center gap-3 mb-3">
                                                <small class="text-muted">
                                                    <i class="far fa-clock"></i>
                                                    <%= new Date(posts[0].createdAt).toLocaleDateString('vi-VN') %>
                                                </small>
                                                <small class="text-muted">
                                                    <i class="far fa-comment"></i>
                                                    <%= posts[0]._count.comments %> bình luận
                                                </small>
                                            </div>
                                            <h2 class="card-title h3 mb-3">
                                                <a href="/posts/<%= posts[0].slug %>"
                                                    class="text-decoration-none text-dark hover-primary">
                                                    <%= posts[0].title %>
                                                </a>
                                            </h2>
                                            <p class="card-text text-muted mb-4">
                                                <%= posts[0].content.substring(0, 200) %>...
                                            </p>
                                            <div class="d-flex align-items-center gap-4">
                                                <a href="/posts/<%= posts[0].slug %>" class="btn btn-gradient">
                                                    <i class="fas fa-arrow-right"></i>
                                                    Đọc tiếp
                                                </a>
                                                <div class="d-flex align-items-center gap-2 text-muted">
                                                    <i class="fas fa-user-circle"></i>
                                                    <span>
                                                        <%= posts[0].author.name %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                        </div>
                    </div>
                </div>

                <!-- Latest Posts -->
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="h4 mb-0 d-flex align-items-center gap-2">
                            <i class="fas fa-newspaper text-primary"></i>
                            Bài viết mới nhất
                        </h3>
                        <a href="/posts" class="btn btn-outline-primary btn-sm">
                            Xem tất cả
                            <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                    <div class="row g-  4">
                        <% posts.slice(1).forEach(function(post) { %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 post-card">
                                    <% if (post.thumbnail) { %>
                                        <div class="position-relative">
                                            <img src="<%= post.thumbnail %>" class="post-thumb w-100"
                                                style="height: 200px; object-fit: cover;" alt="<%= post.title %>">
                                            <div class="position-absolute top-0 start-0 p-2">
                                                <span class="badge bg-primary">
                                                    <%= post.category.name %>
                                                </span>
                                            </div>
                                        </div>
                                        <% } %>
                                            <div class="card-body p-4">
                                                <div class="d-flex align-items-center gap-3 mb-3">
                                                    <small class="text-muted">
                                                        <i class="far fa-clock"></i>
                                                        <%= new Date(post.createdAt).toLocaleDateString('vi-VN') %>
                                                    </small>
                                                    <small class="text-muted">
                                                        <i class="far fa-comment"></i>
                                                        <%= post._count.comments %>
                                                    </small>
                                                </div>
                                                <h5 class="card-title h5 mb-3">
                                                    <a href="/posts/<%= post.slug %>"
                                                        class="text-decoration-none text-dark hover-primary">
                                                        <%= post.title %>
                                                    </a>
                                                </h5>
                                                <p class="card-text text-muted small mb-4">
                                                    <%= post.content.substring(0, 100) %>...
                                                </p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <a href="/posts/<%= post.slug %>"
                                                        class="btn btn-sm btn-outline-primary">
                                                        Đọc tiếp
                                                        <i class="fas fa-arrow-right ms-1"></i>
                                                    </a>
                                                    <div class="d-flex align-items-center gap-2 text-muted small">
                                                        <i class="fas fa-user-circle"></i>
                                                        <span>
                                                            <%= post.author.name %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
                <% } else { %>
                    <div class="col-12">
                        <div class="card border-0 bg-light">
                            <div class="card-body p-5 text-center">
                                <div class="mb-4">
                                    <i class="fas fa-newspaper fa-4x text-primary opacity-50"></i>
                                </div>
                                <h3 class="h4 mb-3">Chưa có bài viết nào</h3>
                                <p class="text-muted mb-4">Hãy là người đầu tiên chia sẻ kiến thức!</p>
                                <% if (locals.user) { %>
                                    <a href="/posts/new" class="btn btn-gradient">
                                        <i class="fas fa-plus"></i>
                                        Viết bài mới
                                    </a>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- Sidebar -->
                        <div class="col-lg-4">
                            <!-- Categories -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-tags"></i>
                                    <span>Chuyên mục</span>
                                </div>
                                <div class="list-group list-group-flush">
                                    <% const categories=[...new Set(posts.map(post=> post.category))]; %>
                                        <% categories.forEach(category=> { %>
                                            <a href="/categories/<%= category.slug %>"
                                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="fas fa-folder text-primary"></i>
                                                    <%= category.name %>
                                                </div>
                                                <span class="badge bg-primary rounded-pill">
                                                    <%= posts.filter(post=> post.categoryId === category.id).length %>
                                                </span>
                                            </a>
                                            <% }); %>
                                </div>
                            </div>

                            <!-- Popular Posts -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <i class="fas fa-fire"></i>
                                    <span>Bài viết nổi bật</span>
                                </div>
                                <div class="list-group list-group-flush">
                                    <% posts.slice(0, 5).forEach(post=> { %>
                                        <a href="/posts/<%= post.slug %>"
                                            class="list-group-item list-group-item-action py-3">
                                            <div class="d-flex gap-3">
                                                <% if (post.thumbnail) { %>
                                                    <img src="<%= post.thumbnail %>" class="rounded" width="64"
                                                        height="64" style="object-fit: cover;" alt="<%= post.title %>">
                                                    <% } %>
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1 text-truncate hover-primary">
                                                                <%= post.title %>
                                                            </h6>
                                                            <div
                                                                class="d-flex align-items-center gap-3 text-muted small">
                                                                <span>
                                                                    <i class="far fa-clock"></i>
                                                                    <%= new
                                                                        Date(post.createdAt).toLocaleDateString('vi-VN')
                                                                        %>
                                                                </span>
                                                                <span>
                                                                    <i class="far fa-comment"></i>
                                                                    <%= post._count.comments %>
                                                                </span>
                                                            </div>
                                                        </div>
                                            </div>
                                        </a>
                                        <% }); %>
                                </div>
                            </div>

                            <!-- About -->
                            <div class="card">
                                <div class="card-header">
                                    <i class="fas fa-info-circle"></i>
                                    <span>Về chúng tôi</span>
                                </div>
                                <div class="card-body">
                                    <p class="card-text mb-4">
                                        Blog lập trình - Nơi chia sẻ kiến thức, tin tức và hướng dẫn về lập trình, công
                                        nghệ và phát triển phần mềm.
                                    </p>
                                    <div class="d-flex justify-content-center gap-3">
                                        <a href="#" class="btn btn-outline-primary btn-sm">
                                            <i class="fab fa-facebook"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-info btn-sm">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm">
                                            <i class="fab fa-youtube"></i>
                                        </a>
                                        <a href="#" class="btn btn-outline-dark btn-sm">
                                            <i class="fab fa-github"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
        </div>
    </div>

    <style>
        /* Custom styles for home page */
        .hover-primary {
            transition: var(--transition);
        }

        .hover-primary:hover {
            color: var(--primary) !important;
        }

        .featured-post {
            background: var(--gradient-card);
        }

        .featured-img {
            border-radius: var(--radius-lg) 0 0 var(--radius-lg);
        }

        .post-card {
            transition: var(--transition);
        }

        .post-thumb {
            border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        }

        .list-group-item {
            border: none;
            transition: var(--transition);
        }

        .list-group-item:hover {
            background: var(--gradient-card);
        }

        .list-group-item i {
            transition: var(--transition);
        }

        .list-group-item:hover i {
            transform: scale(1.1);
        }

        /* Dark mode support */
        @media (prefers-color-scheme: dark) {
            .featured-post {
                background: var(--gray-100);
            }

            .list-group-item {
                background: var(--gray-100);
                color: var(--gray-800);
            }

            .list-group-item:hover {
                background: var(--gray-200);
            }

            .text-muted {
                color: var(--gray-500) !important;
            }
        }
    </style>

    <%- include('partials/footer') %>