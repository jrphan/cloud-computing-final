<%- include('../partials/header') %>

    <div class="row justify-content-center wrapper-container">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Đăng nhập</h4>
                </div>
                <div class="card-body">
                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit " class="btn btn-primary text-center-custom">Đăng nhập</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <p class="mb-0">Bạn chưa có tài khoản? <a href="/register">Đăng ký tại đây</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .wrapper-container {
            min-height: calc(100vh - 440px);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .text-center-custom {
            display: flex !important;
            justify-content: center !important;
            align-items: center !important;
        }
    </style>

    <%- include('../partials/footer') %>